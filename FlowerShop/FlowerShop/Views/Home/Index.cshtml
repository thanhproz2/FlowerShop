
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/_LayoutMain.cshtml";
}

<div class="left_content">

    <div class="title">
        <span class="title_icon">
            <img src="images/bullet1.gif"
                 alt="" title="" />
        </span>Featured products
    </div>

    @{foreach (var p in ViewBag.fPro)
        {
            <div class="feat_prod_box">

                <div class="prod_img">
                    <a href="details.html">
                        <img src="~/Content/images/@p.photo" alt=""
                             title="" border="0" />
                    </a>
                </div>

                <div class="prod_det_box">
                    <div class="box_top"></div>
                    <div class="box_center">
                        <div class="prod_title">@p.name</div>
                        <p class="details">
                            @p.description
                        </p>
                        <a href="@Url.Action("Detail", "Product", new { id = p.id})" class="more">- more details -</a>
                        <div class="clear"></div>
                    </div>

                    <div class="box_bottom"></div>
                </div>
                <div class="clear"></div>
            </div>
        }
    }

    <div class="title">
        <span class="title_icon">
            <img src="~/Content/images/bullet2.gif"
                 alt="" title="" />
        </span>New products
    </div>
    <div class="new_products">

        @foreach (var p in ViewBag.nPro)
        {
            <div class="new_prod_box">
                <a href="@Url.Action("Detail", "Product", new { id = p.id})">@p.name</a>
                <div class="new_prod_bg">
                    <span class="new_icon">
                        <img src="~/Content/images/new_icon.gif"
                             alt="" title="" />
                    </span> <a href="@Url.Action("Detail", "Product", new { id = p.id})">
                        <img src="~/Content/images/@p.photo" alt="" title="" class="thumb" border="0" />
                    </a>
                </div>
            </div>
        }

    </div>

    <div class="clear"></div>

</div>

